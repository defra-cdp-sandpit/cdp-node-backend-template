{
  "name": "cdp-node-backend-template",
  "version": "0.1.0",
  "description": "CDP Backend Template",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "docker:dev": "NODE_ENV=development npm run server:watch",
    "dev": "npm run server:watch",
    "dev:debug": "npm run server:debug",
    "format": "prettier --write \"**/*.{md,json}\"",
    "format:check": "prettier --check \"**/*.{md,json,config.js}\"",
    "git:pre-commit-hook": "npm run format:check && npm run lint",
    "postinstall": "npm run setup:husky",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "jest --coverage --verbose --runInBand",
    "test:watch": "jest --watch",
    "server:watch": "nodemon --inspect=0.0.0.0 --ext js,json,njk,scss --legacy-watch ./src",
    "server:debug": "nodemon --inspect-brk=0.0.0.0 --ext js,json,njk,scss --legacy-watch ./src",
    "start": "NODE_ENV=production node --use-strict .",
    "setup:husky": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@defra/hapi-tracing": "1.0.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.3.12",
    "audit": "0.0.6",
    "aws-embedded-metrics": "4.2.0",
    "aws4": "1.13.2",
    "convict": "6.2.4",
    "fix": "0.0.6",
    "hapi-pino": "12.1.0",
    "hapi-pulse": "3.0.1",
    "https-proxy-agent": "7.0.5",
    "mongo-locks": "3.0.2",
    "mongodb": "6.10.0",
    "node-fetch": "3.3.2",
    "pino": "9.5.0",
    "pino-pretty": "13.0.0",
    "undici": "6.20.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "4.3.2",
    "autoprefixer": "10.4.20",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-fetch-mock": "3.0.3",
    "nodemon": "3.1.7",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.3",
    "standard": "17.1.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  }
}
